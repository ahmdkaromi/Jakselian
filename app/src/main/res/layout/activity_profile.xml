<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".ProfileVIP"
    android:background="@color/blue"
    android:id="@+id/drawerLayoutProfileVIP">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_profile_vip"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rustico"
                    android:paddingTop="5dp"
                    android:text="Jakselian"
                    android:textColor="@color/pink"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:paddingLeft="10dp"
        android:text="Username"
        android:textColor="@color/pink"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/lightpink"
        app:cardCornerRadius="40dp">

        <EditText
            android:id="@+id/editUserVIP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightpink"
            android:fontFamily="@font/montserrat"
            android:hint="User"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textColor="@color/pink"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/lightpink"
        app:cardCornerRadius="40dp">

        <EditText
            android:id="@+id/editEmailVIP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightpink"
            android:fontFamily="@font/montserrat"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:paddingLeft="10dp"
        android:text="Password"
        android:textColor="@color/pink"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/lightpink"
        app:cardCornerRadius="40dp">

        <EditText
            android:id="@+id/editPasswordVIP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightpink"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_profile_vip"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:text="Save Changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:fontFamily="@font/architects_daughter"
            android:textStyle="bold"
            android:textColor="@color/blue"
            />

    </LinearLayout>
    <View
        android:background="@color/pink"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:menu="@menu/navigation_menu"
    android:id="@+id/navProfileVIP"
    android:background="@color/pink"
    android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>