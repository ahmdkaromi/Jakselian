<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".GetPremium"
    android:background="@color/blue"
    android:id="@+id/drawerLayoutPremium">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_premium"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rustico"
                    android:paddingTop="5dp"
                    android:text="Jakselian"
                    android:textColor="@color/pink"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_marginTop="60dp"
            android:fontFamily="@font/architects_daughter"
            android:textColor="@color/pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Claim akses FREEMIUM dengan menekan tombol dibawah untuk memaksimalkan experience kamu dalam menggunakan Aplikasi Jakselian."/>

        <Button
            android:id="@+id/button_freemium"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREEMIUM"
            android:backgroundTint="@color/pink"
            />

        <TextView
            android:id="@+id/id_freemium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uhuy"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/username_freemium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uhuy"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/status_freemium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uhuy"
            android:visibility="invisible"
            />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:id="@+id/navPremium"
        android:background="@color/pink"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>