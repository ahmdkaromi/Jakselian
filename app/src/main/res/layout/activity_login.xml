<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/judul_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rustico"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="Jakselian"
        android:textColor="@color/pink"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/judul_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/architects_daughter"
            android:paddingLeft="10dp"
            android:text="Username"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:backgroundTint="@color/lightpink"
            app:cardCornerRadius="40dp">

            <EditText
                android:id="@+id/username_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightpink"
                android:fontFamily="@font/montserrat"
                android:hint="Masukkan Username Anda"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/architects_daughter"
            android:paddingLeft="10dp"
            android:text="Password"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/lightpink"
            app:cardCornerRadius="40dp">

            <EditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightpink"
                android:fontFamily="@font/montserrat"
                android:hint="Masukkan Password Anda"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="15dp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/pink"
            android:fontFamily="@font/architects_daughter"
            android:text="Masuk"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/belumregist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:text="Belum memiliki akun? Lakukan registrasi disini." />
    </LinearLayout>
</RelativeLayout>